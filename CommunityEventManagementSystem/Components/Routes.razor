 @using CommunityEventManagementSystem.Components.Pages.Shared
 @using CommunityEventManagementSystem.Components.Layout

@using Microsoft.AspNetCore.Components.Routing

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(CommunityEventManagementSystem.Components.App).Assembly">
        <Found Context="routeData">
            <RouteView RouteData="@routeData"
                       DefaultLayout="@typeof(CommunityEventManagementSystem.Components.Layout.MainLayout)" />
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <Pages.Shared.NotFound />
        </NotFound>
    </Router>
</CascadingAuthenticationState>


